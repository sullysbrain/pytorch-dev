{
  "name": "ComfyUI Dev",
  // "dockerComposeFile": ["../docker-compose.yml"],
  "build": {
    "dockerfile": "../Dockerfile_cuda",
    "args": {
      "BASE_IMAGE": "python:3.10-slim",
      "USE_CUDA": "false"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
